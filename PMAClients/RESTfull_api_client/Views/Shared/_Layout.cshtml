<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hajduk home</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HAJDUK</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Index">Members</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://hajduk.hr/">Link: hajduk.hr</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown menu
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="https://www.youtube.com/hajduk">YT Channel</a></li>
                            <li><a class="dropdown-item" href="https://twitter.com/hajduk">Twitter account</a></li>
                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle" href="#">News</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="https://hajduk.hr/vijesti">Latest news</a></li>
                                    <li><a class="dropdown-item" href="https://hajduk.hr/vijesti/akademija">Hajduk academy</a></li>
                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item dropdown-toggle" href="#">First team</a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="https://hajduk.hr/prva-momcad">Season 2021/2022</a></li>
                                            <li><a class="dropdown-item" href="#">Season 2020/2021</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item dropdown-toggle" href="https://hajduk.hr/povijest">History</a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="https://en.wikipedia.org/wiki/HNK_Hajduk_Split_statistics_and_records#Biggest_wins">Greatest win</a></li>
                                            <li><a class="dropdown-item" href="#">Best goal</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Fans and Stadium
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="https://hajduk.hr/klub/navijaci">Fans(Torcida Split)</a>
                            <a class="dropdown-item" href="https://hajduk.hr/klub/stadion">Stadium(Poljud Split)</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="https://hajduk.hr/klub/clanstvo">BUDI ČLAN</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Register</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    <a class="btn btn-outline-primary my-2 my-sm-0" data-toggle="modal" data-target="#loginModal">Sign in</a>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - HNK Hajduk - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <h5>Modal dialog is used for entering your data!</h5>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Upisati email">
                            <small id="emailHelp" class="form-text text-muted">We are 100% safe page.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="keepMeSignedIn">
                            <label class="form-check-label" for="keepMeSignedIn">This is private PC</label>
                        </div>
                    </form>
                </div>
                <div class="d-flex justify-content-center">
                    <div id="waitingSpinner" class="spinner-border text-primary" role="status" style="display: none">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="row">
                    <div class="offset-md-1 col-md-10">
                        <div id="loginMessage" class="alert alert-danger" style="display:none;">This is messega for errror</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="modalLogin()">Go</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/pma/pma.data.js" asp-append-version="true"></script>
    <script src="~/lib/pma/pma.common.js" asp-append-version="true"></script>

    @RenderSection("PageLevelScripts", required: false)
</body>
</html>
